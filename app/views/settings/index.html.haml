%h1
  = t(".title")

.container
  %table.table
    %thead
      %tr
        %th= Setting.human_attribute_name(:key)
        %th= Setting.human_attribute_name(:value)
        %th= Setting.human_attribute_name(:description)
        %th

    %tbody
      - @settings.each do |setting|
        %tr
          %td= setting.key
          %td= setting.value
          %td= setting.description
          %td= link_to 'Edit', edit_setting_path(setting)

%br

= link_to 'New Setting', new_setting_path
