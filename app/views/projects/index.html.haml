%h1 Наши проекты
%hr

.container
  -@projects.each do |row|
    .row
      -row.each do |project|
        .col-lg-4
          =image_tag project.photo.url(:thumb), class: 'center-block'
          %h2
            =project.name
          %p
            =project.short_desc.html_safe
          %p
            %a.btn.btn-default{href: project_path(project), role: 'button'} Читать дальше &raquo;

  -if user_signed_in?
    %hr
    = link_to 'Добавить проект', new_project_path, class: 'btn btn-info'
  %hr
